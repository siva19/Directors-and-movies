= form_for @movie, :html => { :class => "form-horizontal movie" } do |f|
  - if @movie.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@movie.errors.count, "error")
          prohibited this movie from being saved:
      .panel-body
        %ul
          - @movie.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :title, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, :class => 'form-control'
    = f.error_span(:title)
  .form-group
    = f.label :cast, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :cast, :class => 'form-control'
    = f.error_span(:cast)
  .form-group
    = f.label :ratting, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :ratting, :class => 'form-control'
    = f.error_span(:ratting)
  .form-group
    = f.label :director_id, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :director_id, :class => 'form-control'
    = f.error_span(:director_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        movies_path, :class => 'btn btn-default'                     |
